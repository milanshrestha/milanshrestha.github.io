<footer class="sitemap-footer">
  <div class="sitemap-footer__container">
    <div class="sitemap-footer__column">
      <h3>Navigation</h3>
      <ul>
        {% for item in nav %}
          <li><a href="{{ item.url }}">{{ item.title }}</a></li>
        {% endfor %}
      </ul>
    </div>

    <div class="sitemap-footer__column">
      <h3>Recent Content</h3>
      <ul>
        {% for post in collections.posts | reverse | slice(0, 3) %}
          <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
        {% else %}
          <li><p>No recent posts yet.</p></li>
        {% endfor %}
      </ul>
    </div>

    <div class="sitemap-footer__column">
      <h3>{{ site.footer_cta.title }}</h3>
      <p class="sitemap-footer__cta-text">{{ site.footer_cta.text }}</p>
      <a href="mailto:{{ site.email }}" class="btn btn-primary">{{ site.footer_cta.button_text }}</a>
    </div>
  </div>
</footer>
